<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/loadingv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loadingv2" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/strikethru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/strikethru"
        android:backgroundTint="@color/colorAccent"
        android:checked="false"
        android:contentDescription="@null"
        android:thumb="@null"
        app:layout_constraintStart_toEndOf="@id/loadingv2"
        app:layout_constraintTop_toTopOf="@id/loadingv2" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/plus_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plus_x"
        android:backgroundTint="@color/colorAccent"
        android:checked="false"
        android:contentDescription="@null"
        android:thumb="@null"
        app:layout_constraintStart_toEndOf="@id/strikethru"
        app:layout_constraintTop_toTopOf="@id/strikethru" />

    <ImageView
        android:id="@+id/loadingv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@id/plus_x"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loadingv3" />

    <ImageView
        android:id="@+id/selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadingv2"
        app:srcCompat="@drawable/loadingv3" />

</androidx.constraintlayout.widget.ConstraintLayout>
